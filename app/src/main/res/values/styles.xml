<resources>

    <!--~~~~~~~~~~~~~~~~~ TEXT GENERIC ~~~~~~~~~~~~~~~~~-->
    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextView" parent="TextAppearance">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Bold">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/text_size_bold</item>

    </style>

    <style name="TextView.Modest">
        <item name="fontFamily">@font/opensans_light</item>
        <item name="android:textColor">@color/text_modest</item>
        <item name="android:textSize">@dimen/text_size_modest</item>
    </style>

    <style name="TextView.Modest.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextView.Accent">
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:letterSpacing">@dimen/text_spacing_medium</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextView.Accent.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="TextView.Accent.Bold">
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TextView.Accent.Bold.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!--~~~~~~~~~~~~~~~~ BUTTONS GENERIC ~~~~~~~~~~~~~~~-->
    <style name="Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/theme_window_background</item>
        <item name="android:textSize">@dimen/btn_text_size_default</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <!-- override me -->
        <item name="android:background">@null</item>

        <item name="android:paddingTop">@dimen/offset_8</item>
        <item name="android:paddingBottom">@dimen/offset_8</item>
        <item name="android:paddingStart">@dimen/offset_12</item>
        <item name="android:paddingEnd">@dimen/offset_12</item>
    </style>

    <style name="Button.Borderless">
        <item name="android:textColor">@drawable/color_cyan</item>
        <item name="android:background">@drawable/ripple_rect_dark</item>

        <item name="android:paddingStart">@dimen/offset_12</item>
        <item name="android:paddingTop">@dimen/offset_8</item>
        <item name="android:paddingEnd">@dimen/offset_12</item>
        <item name="android:paddingBottom">@dimen/offset_8</item>
    </style>

    <style name="Button.Rounded">
        <!-- override me -->
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:foreground">@drawable/ripple_rounded_light</item>

        <item name="android:paddingStart">@dimen/offset_24</item>
        <item name="android:paddingEnd">@dimen/offset_24</item>
        <item name="android:paddingTop">@dimen/offset_8</item>
        <item name="android:paddingBottom">@dimen/offset_8</item>
    </style>

    <style name="Button.Rounded.Borderless">
        <item name="android:foreground">@null</item>
        <item name="android:background">@drawable/ripple_rounded_light</item>

        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Button.Rounded.Border">
        <item name="android:background">@drawable/bg_rounded_border</item>
        <!-- override me -->
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="Button.Rounded.Border.Cyan">
        <item name="android:textColor">@drawable/color_cyan</item>
        <item name="android:textSize">@dimen/btn_rounded_border_text_size</item>
        <item name="android:background">@drawable/btn_rounded_border_cyan</item>
    </style>

    <style name="Button.Rounded.Cyan">
        <item name="android:textColor">@drawable/color_white</item>
        <item name="android:textSize">@dimen/btn_cyan_text_size</item>
        <item name="android:background">@drawable/btn_rounded_cyan</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ EDITTEXT ~~~~~~~~~~~~~~~~~~-->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edit_rounded_ash</item>
        <item name="android:singleLine">true</item>

        <item name="android:paddingTop">@dimen/offset_8</item>
        <item name="android:paddingBottom">@dimen/offset_8</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ WIDGETS ~~~~~~~~~~~~~~~~~~~-->
    <style name="DialogContainer">
        <item name="android:background">@drawable/bg_rounded_8</item>
        <item name="android:padding">@dimen/offset_16</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayout.TextAppearance</item>
        <item name="tabTextColor">@color/tabs_text_default</item>
        <item name="tabSelectedTextColor">@color/tabs_text_selected</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@drawable/tabs_indicator</item>
        <item name="tabIndicatorHeight">@dimen/tabs_indicator_height</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">@color/tabs_indicator</item>
    </style>

    <style name="TabLayout.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/tabs_text_size</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="textAllCaps">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~~ LISTS ~~~~~~~~~~~~~~~~~~~~-->


    <!--~~~~~~~~~~~~~~~~~~~~ TOOLBAR ~~~~~~~~~~~~~~~~~~~-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorSecondary">@color/text_default</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_default</item>
        <item name="android:letterSpacing">@dimen/text_spacing_medium</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ DIALOGS ~~~~~~~~~~~~~~~~~~~-->
    <style name="DialogThemeWide" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~ STYLEABLE ~~~~~~~~~~~~~~~~~~-->
    <declare-styleable name="PianoKeyboardView">
        <attr name="whiteKeysColor" format="color"/>
        <attr name="blackKeysColor" format="color"/>
        <attr name="octaveCount" format="integer"/>
    </declare-styleable>

</resources>