<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.ordolabs.compose.ui.view.PianoKeyboardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"

                app:blackKeysColor="@color/chord_keyboard_blacks"
                app:octaveCount="@integer/chord_keyboard_octaves"
                app:whiteKeysColor="@color/chord_keyboard_whites"
                app:coerceInWidth="true"/>

        </FrameLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>